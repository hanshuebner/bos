								<tr>
									<td height="12"></td>
								</tr>
								<tr>
					                          	<td colspan="3" align="right">
										<input type="submit" class="form_big" name="Button"
											onclick="javascript:return confirm('Is the indicated name correct?');"
											value="save and continue" />
								  	</td>
								</tr>
							</table>
						 </form>
